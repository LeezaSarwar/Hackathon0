# Environment Variables for AI Employee System
# Copy this file to .env and fill in your actual credentials

# Gmail API Credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here

# LinkedIn Credentials (if using API)
LINKEDIN_API_KEY=your_linkedin_api_key_here
LINKEDIN_API_SECRET=your_linkedin_api_secret_here

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./AI_Employee_Vault/whatsapp_session_data

# System Configuration
VAULT_PATH=./AI_Employee_Vault
CHECK_INTERVAL=120

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Dry Run Mode (set to true for testing without actual actions)
DRY_RUN=false

# Approval Settings
DEFAULT_APPROVAL_EXPIRY_HOURS=24
URGENT_APPROVAL_EXPIRY_HOURS=4

# Notification Settings (future use)
NOTIFICATION_EMAIL=your_email@example.com
NOTIFICATION_WEBHOOK=your_webhook_url_here
